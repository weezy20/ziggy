{
  "name": "@weezy20/ziggy",
  "version": "1.1.0",
  "description": "A fast, easy to use, Zig programming language installer and version manager powered by Bun",
  "keywords": [
    "zig",
    "installer",
    "version-manager",
    "ziggy",
    "zig-lang"
  ],
  "author": "weezy20",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/weezy20/ziggy.git"
  },
  "bugs": {
    "url": "https://github.com/weezy20/ziggy/issues"
  },
  "homepage": "https://github.com/weezy20/ziggy#readme",
  "bin": {
    "ziggy": "src/index.ts"
  },
  "files": [
    "src/",
    "README.md"
  ],
  "module": "src/index.ts",
  "type": "module",
  "scripts": {
    "start": "bun run src/index.ts",
    "build": "bun build src/index.ts --compile --outfile ziggy"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "@inquirer/prompts": "^7.8.3",
    "@napi-rs/lzma": "^1.4.0",
    "commander": "^14.0.0",
    "tar": "^7.4.3",
    "zip-lib": "1.1.2"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/tar": "^6.1.13"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
